        </RelativeLayout>
        <RelativeLayout
            android:layout_toEndOf="@+id/opcion10"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="REDES SOCIALES"
                style="@style/menuopcionestext_normal">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>




    <RelativeLayout android:layout_width="match_parent"
        android:layout_below="@+id/blocke9"
        android:id="@+id/blocke6"
        android:background="@drawable/opcionesbackground"
        style="@style/contenedormenuopcion"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="40dp"
            android:id="@+id/opcion8"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/info_iconquestions256"
