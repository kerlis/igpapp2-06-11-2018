<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="4dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datosmedios"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/asignacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/magnitudiconodato"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:text="asignacion"/>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/asignacion"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/dd">

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FECHA1"
                android:layout_centerHorizontal="true"
                style="@style/datofechalistview"
                android:gravity="center_horizontal|center"
                android:layout_alignParentTop="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ubicacion"
                android:text="ubicacion"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_below="@id/fecha"
                style="@style/datoubicacionlistview"/>



            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ubicacion"
                android:gravity="center_horizontal"
                android:id="@+id/profundidad"
                style="@style/datoprofimaxlistview"/>

        </RelativeLayout>



        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/sismograma3"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView"/>

    </RelativeLayout>


</LinearLayout>